.hint-popup
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background-color #fff
	z-index 10000

	&__close-button
		width 24px
		height 24px
		background inline('close.svg')
		background-position center
		position absolute
		right 20px
		top 20px

		&:hover
			cursor pointer

	&__content
		margin 0 34px
		display flex
		flex-direction column
		justify-content center
		align-items center

	&__text
		text-align center
		font-size 18px
		line-height 1.4
		font-weight normal
		color #1D1E1F

	&__icon-wrapper
		width 120px
		height 120px
		background-color #f1f5f8
		border-radius 50%
		margin-bottom 16px
		display flex
		justify-content center
		align-items center

	&__icon
		width 72px
		height 72px
		background inline('super-plus.svg')
		background-position center
		background-repeat no-repeat
		background-size cover

		&:hover
			cursor pointer

	&__bottom-text
		position absolute
		bottom 22px
		font-size 16px
		color #1D1E1F

		&:hover
			cursor pointer
