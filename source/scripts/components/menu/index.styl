.menu
	width 100%
	height 100%
	position absolute
	top 0
	right 0
	z-index 1000

	&__inner
		width 100%
		position absolute
		top 0
		right 0
		height 100%
		background-color #fff
		overflow-y scroll

		.menu__top-bar
			display flex
			align-items center
			justify-content space-between
			padding 15px 17px 13px 16px

		.icons-section
			display flex

			&__icon
				width 24px
				height 24px
				&:hover
					cursor pointer

				&_event-edit
					margin-right 24px
					background-image inline('pen.svg')
				
				&_show-hint
					margin-right 24px
					background-image inline('bordered-plus.svg')

		.bottom-bar
			background-color #fff
			display flex
			padding 19px
			align-items center
			border-top 1px solid #eff2f6
			cursor pointer

			&__text
				font-size 16px
				font-weight normal
				color #1D1E1F

			&__icon
				margin-right 27px
				width 24px
				height 24px
				background-image inline('exit.svg')

				&:hover
					cursor pointer

	&__manager-annotation
		padding 19px
		font-size 14px
		color #1D1E1F
		border-top 1px solid #eff2f6
