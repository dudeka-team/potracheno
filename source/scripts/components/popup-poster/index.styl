.popup-poster
	position fixed
	bottom 64px
	left 50%
	z-index 9999
	transform translateX(-50%)
	display table
	width auto
	max-width calc(100% - 30px)
	padding 13px 24px 11px 24px
	font-size 16px
	font-weight normal
	line-height 1.25
	color #ffffff
	text-align center
	border-radius 100px
	background-color rgba(4, 3, 3, .5)
	visibility hidden
	opacity 0
	transition opacity .6s, visibility .6s

	&__open
		opacity 1
		visibility visible
