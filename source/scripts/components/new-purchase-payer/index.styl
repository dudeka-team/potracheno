.purchase-participants
	width 100%
	padding 24px 16px 14px 16px
	background-color #ffffff

	&__title
		font-size 13px
		color #949A9E
		line-height 1.2
		height 16px
		margin-bottom 6px

	&__list
		display flex

.purchase-inputs
	width: 100%
	padding 16px

.purchase-payer
	font-size 16px
	line-height 1.2
	color #1D1E1F
	padding-bottom 9px
	border-bottom 1px solid #e1e4e7
	position relative

	&::after
		content ""
		position absolute
		background-image inline('arrow-drop-down.svg')
		background-repeat no-repeat
		right -6px
		bottom -3px
		width 24px
		height 24px
		font-size 30px
		font-weight normal
		line-height 1.2
		color rgba(46, 54, 62, 0.32)

	&_disabled::after
		display none
